@{
}
<form asp-action="AssignTeacher" asp-controller="Teachers">
    <label>Select a Teacher</label>
    <br />
    <select name="TeacherId">
        @foreach (var item in Model)
        {
            <option value="@item.Id">@item.Name  @item.Field</option>
        }
    </select>
    <br />
    <label>Select a class number</label>
    <br />
    <select name="ClassId">
        @foreach (var item in ViewBag.Items)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <br />
    <input type="submit" value="Assign" class="btn btn-success" />
</form>
<hr />
<a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-primary">Back to Home</a>

